<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEWS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="#" class="navbar-brand mx-auto">NEWS</a>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>NEWS</th>
                        <th>NEWS</th>
                    </tr>
                    <% for(var i = 0; i < news.length; i++ ){ %>
                    <tr>
                        <td><%= news[i].id_news %></td>
                        <td><%= news[i].title %></td>
                        <td><%= news[i].news %></td>
                    </tr>

                    <% } %>
                </table>
            </div>


            <div class="col-md-6 mt-4 card">
                <form action="/news" method="post" class="card-body">
                    <h3 class="card-title">Agrega una noticia</h3>
                    <div class="form-group">
                        <input id="title" type="text" name="title" class="form-control"
                            placeholder="TITULO DE LA NOTICIA">
                    </div>
                    <div class="form-group">
                        <input id="content" type="text" name="news" class="form-control"
                            placeholder="CONETINDO DE LA NOTICIA">
                    </div>
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>


</body>

<script>
    document.getElementById('title').focus();
</script>

</html>